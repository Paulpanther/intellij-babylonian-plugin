<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Bp Notification Group" displayType="BALLOON" key="bp.notification.group"/>
        <fileDocumentManagerListener id="com.paulmethfessel.bp.ide.events.ChangeHandler" implementation="com.paulmethfessel.bp.ide.events.ChangeHandler"/>
        <annotator language="JavaScript" id="com.paulmethfessel.bp.ide.decorators.BpAnnotator" implementationClass="com.paulmethfessel.bp.ide.decorators.BpAnnotator"/>
        <codeInsight.inlayProvider language="JavaScript" implementationClass="com.paulmethfessel.bp.ide.decorators.ProbeHintsProvider2"/>
        <intentionAction id="blaksdnlas">
            <className>com.paulmethfessel.bp.ide.events.BpAddExampleIntentionAction</className>
        </intentionAction>
        <intentionAction id="addprobebp">
            <className>com.paulmethfessel.bp.ide.events.AddLockedProbeAction</className>
        </intentionAction>
        <documentationProvider implementation="com.paulmethfessel.bp.ide.decorators.BpDocumentationProvider"/>
        <codeInsight.lineMarkerProvider implementationClass="com.paulmethfessel.bp.ide.decorators.ExampleLineMarker" language="JavaScript"/>
        <applicationConfigurable parentId="tools" instance="com.paulmethfessel.bp.ide.settings.BabylonianSettingsConfigurable" id="BabylonianSettings" displayName="Babylonian" />
        <applicationService serviceImplementation="com.paulmethfessel.bp.ide.settings.BabylonianSettingsState"/>
    </extensions>

    <actions>
        <action id="com.paulmethfessel.bp.ide.events.BpToggleAction" class="com.paulmethfessel.bp.ide.events.BpToggleAction"
                text="Enable/Disable Babylonian Integration"
                description="Starts the connection to GraalVM and requests an analysis on change"/>
    </actions>
</idea-plugin>
